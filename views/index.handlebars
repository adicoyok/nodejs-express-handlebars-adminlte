<div class="box box-info">
  <div class="box-header with-border">
    <h3 class="box-title">Data Mahasiswa</h3>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <form role="form" method="post">
      <!-- text input -->
    
      <div class="form-group">
        <div class="col-lg-6">
          <label for="nama">Nama</label>
          <input type="text" name="nama" class="form-control" value="{{ nama }}" placeholder="Masukkan Nama ...">
          {{#if ErrorNama }}
            <label for="nama">{{ ErrorNama }}</label>
          {{/if}}
        </div>
        <div class="col-lg-6">
          <label for="nama">NPM</label>
          <input type="text" name="npm" class="form-control" value="{{ npm }}" placeholder="Masukkan NPM ...">
          {{#if ErrorNpm }}
            <label for="nama">{{ ErrorNpm }}</label>
          {{/if}}
        </div>
        <div class="form-group clearfix"></div>
        <div class="col-lg-6 ">
          <a href="/success" class="btn btn-warning btn-sm"><i class="fa fa-arrow-left"></i> Kembali</a>
          <button type="submit" class="btn btn-sm btn-info"><i class="fa fa-floppy-o"></i> Simpan</button>
        </div>
      </div>
  
    </form>
  </div>
  <!-- /.box-body -->
</div>